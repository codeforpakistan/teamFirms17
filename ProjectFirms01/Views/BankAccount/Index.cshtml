@model IEnumerable<BusinessLayer.MdlClasses.MdlBankAccount>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}
@section Header{
    @Html.Partial("~/Views/Shared/PartialViews/_Header.cshtml")
}

@section Sidebar{
    @Html.Partial("~/Views/Shared/PartialViews/_SideBar.cshtml")
}


@section BodyContent{

    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">BankAccounts</li>
    </ol>

    <p>
        @Html.ActionLink("New BankAccount", "Create")
    </p>

    <table id="example1" class="table table-striped table-responsive table-fixedheader  table-bordered ">
        <thead>
            <tr>
                <th>
                    Org FileNo
                </th>
                <th>
                    Bank Name

                </th>
                <th>
                    Branch Code
                </th>
                <th>
                    Account Title
                </th>
                <th>
                    Creation Date
                </th>
                <th>
                    ID
                </th>
                <th>
                    IsActive
                </th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FileNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankAccountID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BankAccountID })
                    </td>
                </tr>
            }
        </tbody>

    </table>
}




@section FooterArea{

    @Html.Partial("~/Views/Shared/PartialViews/_Footer.cshtml")


}

@model BusinessLayer.MdlClasses.MdlAssociation
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}
@section Header{
    @Html.Partial("~/Views/Shared/PartialViews/_Header.cshtml")
}

@section Sidebar{
    @Html.Partial("~/Views/Shared/PartialViews/_SideBar.cshtml")
}

@section BodyContent{
    <style>
        .form-control {
            width: 400px;
        }
        

        .form-horizontal {
            margin-left: 40px;
        }
    </style>
    <h2>Association</h2>
<p>
    @Html.ActionLink("New Association", "Create")
    &nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Associations", "Index")

</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">

                <div class="col-sm-6">
                    <label class="control-label">Select Organization</label>
                    <div>
                        <select class="form-control Org_ID" name="Org_ID" id="Org_ID" style="background:#fff">
                            <option value="0">--Select Organization--</option>
                            @foreach (var item in @Model.GetAllOrg_ID)
                            {
                                <option selected="@item.Selected" value="@item.Value">@item.Label</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-sm-6">
                    <label class="control-label">Association Name</label>
                    <div>
                        @Html.EditorFor(model => model.AssociationTitle, new { htmlAttributes = new { @class = "form-control" } })

                        @*<select class="form-control RenewalReport_ID" name="RenewalReport_ID" id="RenewalReport_ID" style="background:#fff">
                                <option value="0">--Select Renewal Report--</option>
                            </select>*@
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-6">
                    <label class="control-label">Association Date</label>
                    <div>
                        <input type="date" id="AssociationDate" name="AssociationDate" class="form-control" value=@Html.EditorFor(model => model.AssociationDate, new { htmlAttributes = new { @class = "form-control" } }) />

                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">Expiry Date</label>
                    <div>
                        <input type="date" id="ExpiryDate" name="ExpiryDate" class="form-control" />                       

                    </div>
                   </div>

                </div>
            <div class="row">
                <div class="col-sm-6">


                    <input type="submit" style="margin-top: 10px;" id="InsertAssociation" value="Save" class="btn btn-default" />


                </div>


                <div class="col-sm-6">
                </div>

            </div>
        </div>


    }
    <script>
  $(document).ready(function () {
      $(".Org_ID").msDropDown();

        });

    </script>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}


@section FooterArea{
    @Html.Partial("~/Views/Shared/PartialViews/_Footer.cshtml")


}


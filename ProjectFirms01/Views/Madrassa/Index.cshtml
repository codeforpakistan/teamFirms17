@model IEnumerable<BusinessLayer.MdlClasses.MdlMadrassa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}

@section Header{
    @Html.Partial("~/Views/Shared/PartialViews/_Header.cshtml")
}

@section Sidebar{
    @Html.Partial("~/Views/Shared/PartialViews/_SideBar.cshtml")
}


@section BodyContent{

    <style>
        table.table-fixedheader {
            width: 100% !important;
        }
        .horizontal_scroll{
            overflow-x:scroll;
        }
      
    </style>
    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Madrassa</li>
    </ol>

    <p>
        @Html.ActionLink("Add New Madrassa", "Create")
    </p>
   

    <div class="row">
        <div class="col-sm-12"  >
            <table id="example1" class="table table-striped table-responsive table-fixedheader  table-bordered dataTable">
                <thead>
                    <tr>

                        <th>
                            Madrassa Name
                            
                        </th>
                        <th>
                            File No
                        </th>
                        <th>
                           Madrassa Duration
                          
                        </th>
                        <th>
                            Form A Date
                            
                        </th>

                        <th>
                            Form G #
                            
                        </th>
                        <th>
                            Start Date
                          
                        </th>


                        <th>
                            Notary Public Name
                           
                        </th>
                        <th>
                            Notary PublicLicense #
                           
                        </th>
                        <th>
                            Memo Date 
                           
                        </th>


                        <th>
                            Issue #
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.MadrassaName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrgRegNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DurationofFirm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormADateString)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.FormGNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MadrassaStartDateString)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.NotaryPublicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NotaryPublicLicenseNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MemoDateString)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IssueNo)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.OrganizationID })

                            </td>

                        </tr>

                    }
                </tbody>



            </table>
        </div>
    </div>



}




@section FooterArea{

    @Html.Partial("~/Views/Shared/PartialViews/_Footer.cshtml")


}








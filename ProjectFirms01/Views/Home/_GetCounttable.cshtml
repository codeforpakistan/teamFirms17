@model IEnumerable<BusinessLayer.MdlClasses.MdlCount>
<div class="col-sm-7">

    <div class="chart" id="bar-chart" style="height: 250px;">



        <table class="table table-responsive table-striped table-bordered">
            <tr>
                <td>
                    Org Type Name
                </td>
                <td>
                    Total Count
                </td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.OrgTypeName

                    </td>
                    <td>
                        @item.Total
                    </td>
                </tr>
            }


        </table>
    </div>
</div>

<div class="col-sm-5">
    <div class="pad">


@foreach (var item in Model.Where(o=>o.OrgTypeName=="Firms"))
            {
        <div class="clearfix">
            <span class="pull-left">@item.OrgTypeName</span>
            <small class="pull-right">@item.Total</small>
        </div>
        <div class="progress xs">
            <div class="progress-bar progress-bar-aqua" style="width:@item.OrgTypeName%;"></div>
        </div>
}
      @foreach (var item in Model.Where(o => o.OrgTypeName == "Madrassa"))
            {
        <div class="clearfix">
            <span class="pull-left">@item.OrgTypeName</span>
            <small class="pull-right">@item.Total</small>
        </div>
        <div class="progress xs">
            <div class="progress-bar progress-bar-green" style="width:@item.OrgTypeName%;"></div>
        </div>
      }
@foreach (var item in  Model.Where(o => o.OrgTypeName == "ngo"))
            {
    <div class="clearfix">
        <span class="pull-left">@item.OrgTypeName.ToString().ToUpper()</span>
        <small class="pull-right">@item.Total</small>
    </div>
    <div class="progress xs">
        <div class="progress-bar progress-bar-light-blue" style="width:@item.OrgTypeName%;"></div>
    </div>
            }
      

@model IEnumerable<BusinessLayer.MdlClasses.MdlBusinessType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}


@section Header{
    @Html.Partial("~/Views/Shared/PartialViews/_Header.cshtml")
}

@section Sidebar{
    @Html.Partial("~/Views/Shared/PartialViews/_SideBar.cshtml")
}


@section BodyContent{


    <style>
        .form-control {
            width: 400px;
        }
    </style>
<h2>Bussiness Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="example" class="table table-striped table-responsive table-fixedheader  table-bordered ">
    <thead>
        <tr>
            <th>
                BusinessType ID
            </th>
            <th>
                Business Type Name
            </th>
            <th>
                Is Active
            </th>
            <th>
                Created By
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessTypeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessTypeName)
                </td>
                <td>
                    <input type="checkbox" checked="@item.IsActive" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { ID = item.BusinessTypeID })  
                    @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>

        }
    </tbody>
</table>

<script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
</script>


}

@section FooterArea{
    @Html.Partial("~/Views/Shared/PartialViews/_Footer.cshtml")


}
@model BusinessLayer.MdlClasses.MdlFund
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_FirmLayout.cshtml";
}
@section Header{
    @Html.Partial("~/Views/Shared/PartialViews/_Header.cshtml")
}

@section Sidebar{
    @Html.Partial("~/Views/Shared/PartialViews/_SideBar.cshtml")
}


@section BodyContent{


    <style>
        .form-control {
            width: 400px;
        }

        .k-widget .k-multiselect .k-header {
            width: 274px !important;
        }

        .k-multiselect-wrap {
            width: 274px !important;
        }

        .k-multiselect.k-header {
            width: 274px !important;
        }

        .k-multiselect-wrap li {
            background-color: #efe2e2;
        }

        .form-horizontal {
            margin-left: 40px;
        }
    </style>
    <h2>Edit Fund</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="row">
                <div class="col-sm-6">
                    <label class="control-label">Select Organization</label>
                    <div>
                        <select class="form-control Org_ID" name="Org_ID" id="Org_ID" style="background:#fff">
                            <option value="0">--Select Organization--</option>
                            @foreach (var item in @Model.GetAllOrg_ID)
                            {
                                <option selected="@item.Selected" value="@item.Value">@item.Label</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">Fund Source</label>
                    <div>
                        @Html.EditorFor(model => model.FundSourceName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FundSourceName, "", new { @class = "text-danger" })
                        @*<select class="form-control RenewalReport_ID" name="RenewalReport_ID" id="RenewalReport_ID" style="background:#fff">
                                <option value="0">--Select Renewal Report--</option>
                            </select>*@
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">

                    <label class="control-label">Transfer Means</label>
                    <div>
                        @Html.EditorFor(model => model.TransferMeans, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TransferMeans, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">Transfer Amount</label>
                    <div>
                        @Html.EditorFor(model => model.TransferAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TransferAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label class="control-label">Received Year</label>
                    <div>
                        @Html.EditorFor(model => model.RcvYear, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RcvYear, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">IsActive</label>
                    <div>
                        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        @*<input type="checkbox" id="IsActive" name="IsActive" class="form-control" value="@Model.IsActive" />*@
                        @*@Html.ValidationMessageFor(model => model.AssetValue, "", new { @class = "text-danger" })*@
                    </div>
                </div>
            </div>
            <input type="hidden" name="FundSourceId" value="@Model.FundSourceID" id="FundSourceId" />
            <div class="row">
                <div class="col-sm-6">

                    <div style="margin-top:10px">
                        <input type="submit" id="UpdateFund" value="Update" class="btn btn-default" />
                    </div>

                </div>
                <div class="col-sm-6">
                </div>

            </div>
        </div>    }
    <script>
        $("#UpdateFund").click(function () {
            $("#FundSourceName").removeClass("errorClass");
            $("#TransferMeans").removeClass("errorClass");
            $("#TransferAmount").removeClass("errorClass");
            $("#RcvYear").removeClass("errorClass");
            var isErrorOccurd = true;
            if ($.trim($("#FundSourceName").val()) == "") {
                $("#FundSourceName").addClass('errorClass');
                isErrorOccurd = false;
            }
            if ($.trim($("#TransferMeans").val()) == "") {
                $("#TransferMeans").addClass('errorClass');
                isErrorOccurd = false;
            }
            if ($.trim($("#TransferAmount").val()) == "") {
                $("#TransferAmount").addClass('errorClass');
                isErrorOccurd = false;
            }
            if ($.trim($("#RcvYear").val()) == "") {
                $("#RcvYear").addClass('errorClass');
                isErrorOccurd = false;
            }
            return isErrorOccurd;
        });
    </script>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}




@section FooterArea{
    @Html.Partial("~/Views/Shared/PartialViews/_Footer.cshtml")


}